<div class="container">
  <div class="row">
    <%= render 'books/error', model: @book %>
    <div class="col-md-3">
    <%= render 'users/user', user: @user %>
      <%= link_to edit_user_path(current_user), class:"btn btn-outline-secondary btn-block" do %>
        <i class="fas fa-user-cog"></i>
      <% end %>
    <h2>New book</h2>
    <%= render 'books/book', book: @book %>
    </div>

  <div class= "col-md-8 offset-md-1">
    <h2>Book detail</h2>
    <table class='table' >
    <tr>
    <td>
      <%= link_to user_path(@book.user_id) do %>
      <%= image_tag @book.user.get_profile_image,size:"50, 50"%>
         <nav>
           <%= @book.user.name %>
         </nav>
       <% end %>
    </td>
    


    <td><%= link_to @book.title %></td>
    <td><%= @book.body %></td>
    <% if @book.user_id == current_user.id %>
    <td><%= link_to"edit", edit_book_path(@book.id),class:"btn-sm btn-success" %></td>
    <td><%= link_to "destroy", book_path(@book.id), class:"btn-sm btn-danger destroy(@book.id)", method: :delete,data: {confirm: "削除しますか？"} %></td>
    <% end %>
    </tr>
    </table>
  </div>
  </div>
</div>
