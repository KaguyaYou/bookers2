<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h1>User info</h1>
        <% if @user.errors.any? %>
          <%= @user.errors.count %>件のerrorが発生しました
            <ul>
              <% @user.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
        <% end %>

        <%= form_with model:@user,url:update_user_path(current_user.id), method: :patch do |f| %>
      <h4>name</h4>
        <%= f.text_field :name,class:"col-sm-12" %>

      <h4>image</h4>
        <%= f.file_field:profile_image,accept:"image/*" %>

      <h4>Introduction</h4>
        <%= f.text_area :introduction,class:"col-sm-12" %>
      <nav>
        <%= f.submit 'Update User',class: "col-xs-12 btn btn-secondary" %>
      </nav>
        <% end %>
    </div>
  </div>
</div>